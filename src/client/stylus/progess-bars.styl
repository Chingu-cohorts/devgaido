/*--------------------------------------------------------------
# Progress bar
--------------------------------------------------------------*/

.progress-bar-container {
    /* background: #f9fbff; */
    border-radius: 0 0 1rem 1rem;
    height: 5rem;
    margin-top: 2rem;
    padding: 0 1rem 6rem 1rem;
    position: relative;
    width: 100%;

}
.progress-bar {
    align-items: center;
    background-image: url('/assets/img/dot.svg') ;
    background-position: center;
    background-repeat: repeat-x;
    background-size: 26px ;
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    height: 10px;
    width: 60%;
}

.progress-bar-element {
    background-color: colorPrimaryLight;
    border-radius: 50%;
    display: flex;
    height: 40px;
    position: relative;
    text-align: center;
    width: 40px;
}

.progress-bar-element i {
    align-self: center;
    color: colorTextInverse;
    display: block;
    margin: 0 auto;
}


.progress-bar-element span {
    bottom: -40px;
    color: colorPrimaryDark;
    display: table-cell;
    height: 36px;
    font-size: 0.7rem;
    font-weight: 600;
    left: -21px;
    position: absolute;
    text-align: center;
    text-transform: uppercase;
    vertical-align: text-top;
    width: 80px;

}

.progress-bar-element:first-child {
    margin-left: -2px;
}

.progress-bar-element:last-child {
    margin-right: -2px;
}

.completed {
    background-color: #3cc788;
}

