@media only screen and (max-width: 600px) {
  .grid-half {
    width: 100%;
  }
  .header-image {
    max-height: 8.4rem;
    overflow: hidden;
  }
  .title {
    align-self: center;
    padding: 1rem 0;
    text-align: center;
  }
  .download-button {
    display: inline-block;
    margin: 0 auto;
    width: 139px;
  }
  #commands {
    margin-top: 3rem;
  }
  .footer {
    margin-top: 1rem;
  }
  .contact {
    // TODO: Resolve color specification
    background: primaryColor //#264880;
    padding: 1rem 2rem 4rem 2rem;
    text-align: center;
  }
  .contact a,   
  a i.fa {
    color: white;
  }
  a.support {
    bottom: -4.5rem;
  }
}