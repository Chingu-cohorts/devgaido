/*--------------------------------------------------------------
# Radio buttons
--------------------------------------------------------------*/
  
.objectives td {
    position: relative;
}

.objectives input[type=radio],
.objectives input[type=checkbox] {
    position: absolute;
    visibility: hidden;
}

.objectives label {
    display: block;
    position: relative;
    font-weight: 300;
    font-size: 1.35em;
    padding: 25px 25px 25px 80px;
    margin: 10px auto;
    height: 30px;
    z-index: 9;
    cursor: pointer;
    -webkit-transition: all 0.25s linear;
}

.objectives td:hover label{
    color: #000;
}

.objectives .check {
    display: block;
    position: absolute;
    border: 3px solid colorPrimaryLight;
    border-radius: 100%;
    height: 18px;
    width: 18px;
    top: 22px;
    left: 20px;
    z-index: 5;
    transition: border .25s linear;
    -webkit-transition: border .25s linear;
}

.objectives .checkmark {
    display: block;
    position: absolute;
    border: 3px solid colorPrimaryLight;
    border-radius: 3px;
    height: 18px;
    width: 18px;
    top: 22px;
    left: 20px;
    z-index: 5;
    transition: border .25s linear;
    -webkit-transition: border .25s linear;
}

.objectives .check::before {
    display: block;
    position: absolute;
    content: '';
    border-radius: 100%;
    height: 8px;
    width: 8px;
    top: 2px;
    left: 2px;
    margin: auto;
    transition: background 0.25s linear;
    -webkit-transition: background 0.25s linear;
}

.objectives .checkmark::before {
    display: block;
    position: absolute;
    content: '';
    color: colorSecondaryDark;
    font-family: FontAwesome;
    font-size: 0.7rem;
    height: 6px;
    width: 6px;
    top: -2px;
    left: 1px;
    margin: auto;
    transition: content 0.25s linear;
    -webkit-transition: content 0.25s linear;
}

input[type=radio]:checked ~ .check,
input[type=checkbox]:checked ~ .checkmark {
    // TODO: Check substitution of secondary color against original value
    border: 3px solid colorSecondaryLight //#c8f0db;
}

input[type=radio]:checked ~ .check::before{
    background: colorSecondaryDark;
}

input[type=checkbox]:checked ~ .checkmark::before{
    content: '\f00c';
}

input[type=radio]:checked ~ label{
    // TODO: Check substitution of secondary color against original value
    color: colorSecondary //#0DFF92;
}


