.lesson-caption-small {
    font-size: 0.8rem
    font-weight: 600
    color: #afb9bb
}

.lesson-caption-big,
.path-caption-big {
    font-size: 1.1rem
    font-weight: 600
    margin: 0
}

.lesson-text {
    margin-top 10px
    color colorPrimary
    flex 1
}

.lesson-icon {
    color: colorTextInverse
    float: right
    margin-top 10px
    margin-right: 10px
    display:block;
    font-family: FontAwesome;
    font-size: 1.5rem;
    font-weight: normal;
    font-style: normal;
    height: 50px;
    text-decoration:none;
    width: auto;
    &:last-child {
        margin-left 10px
        margin-right: 20px  
        float left
    }
}

.lesson-button
    background: colorPrimaryLight
    border-radius: 20px
    color: colorPrimary
    font-size: 0.8rem
    font-weight: bold
    height: 35px
    line-height: 5px
    min-width: 100px
    width: 25%
    box-shadow: none

.tabbed-content {
    padding:2rem;
}

.tabs {
    display: flex;
}

.metrics
    display: flex
    flex-direction: column
    padding: 2rem;
    position relative
    margin-bottom: 40px



