/*++++++++++++++++++++++++ PATHCATALOG +++++++++++++++++++++++++++*/
.col-quarter
  lost-column 1/3 3
  margin-bottom 20px

.path-list
  display: flex;
  flex-wrap: wrap;
  margin-top 25px

.path-topics__dropdown:before
  pointer-events:none
  content: "";
  position: absolute;
  right: 10px;
  top: 15px;
  width: 0; 
  height: 0; 
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid colorPrimary

.path-topics__dropdown:after
  pointer-events:none
  content: ""
  position: absolute
  right: 10px
  top: 12px
  width: 0
  height: 0
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid white

