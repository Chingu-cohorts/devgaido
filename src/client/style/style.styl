  left -72px
  
.page-hero__offset
  margin-top: -200px !important

.lcard__checkmark
  right 20px
  top 3px

.mcard__checkmark
  right 20px
  top 5px

.image-link-card__checkmark
  right 20px
  top 10px

.mcard__flag
  top 11px
  left -70px

.logo
  transition margin 0.5s

.logo--displaced
  margin-left 100px

.navbar
  top 0
  z-index: 999
  .card
    z-index 9999 !important

.navbar.fixed
  box-shadow: -1px 1px 1px rgba(0,0,0,0.1)
  .card
    box-shadow: -1px 1px 1px rgba(0,0,0,0.1)

.back-button
  text-align: center
  position: absolute
  border none
  background: transparent
  padding 30px 5px
  margin 0
  left 50%
  top 50%
  transform: translate(-50%, -50%)
  width 60px
  z-index: 999
  color white
  
  transition background 0.5s
  &:hover
    background: transparent
    color $accentColor

  i
    transition color 0.5s
    position: absolute
    top -2px
    left 4px

.side-drawer
  position: fixed
  box-shadow: 1px 1px 1px rgba(0,0,0,0.1)
  z-index: 777
  background: $primaryColor
  transform: translate(-100px)
  opacity: 0.3
  height 100vh
  width 100px
  transition: all 0.5s
  &:hover
    opacity 1
    transform: translate(0)
    .side-drawer__icon
      transition: opacity 0.5s
      opacity: 0

.side-drawer__icon
  position: absolute
  top 50%
  right -90px
  transform: translateY(-50%)
  padding 43px 30px

.auth0-lock-header-logo
  width 80% !important

.auth0-lock-widget
  width 400px !important

.loading__placeholder
  width 522px
  height 350px

.checkbox
  width: 38px
  height: 38px
  margin: auto

  input
    display: none
    &:checked + .checkbox__box
      &:after
        opacity: 1
        
  .checkbox__box
    width: 100%
    height: 100%
    border: 1px solid $inputBorderColor
    border-radius: 6px
    position: relative
    overflow: hidden
    cursor: pointer
    &:hover
      border-color $primaryColor
    &:after
      opacity: 0
      width: 50%
      height: 20%
      content: ''
      position: absolute
      border-left: 3.5px solid
      border-bottom: 3.5px solid
      border-color: $accentColor
      transform: rotate(-45deg) translate3d(0,0,0)
      transform-origin: center center
      transition: all 0.2s
      left: 0
      right: 0
      top: 0
      bottom: 5%
      margin: auto

.progress, 
.progress__fill,
.progress__mask
  height: 15px 

.image-link-card__img
  min-height 120px
