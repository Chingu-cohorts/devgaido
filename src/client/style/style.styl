/*++++++++++++++++++++++++ HOME +++++++++++++++++++++++++++*/
.home-hero
  background: url('/assets/img/compass4.jpg')
  background-size: cover
  background-position-y: 50%
  height 600px
  width 100%
  display flex
  align-items: center
  justify-content: center

.home-content
  display flex
  flex-wrap: wrap
  width 50%

.hero-tagline
  color white
  font-weight: bold
  width 100%

.hero-tagline-colored
  color colorSecondary

.hero-details
  margin-top 20px
  margin-bottom: 20px
  p
    color rgba(255,255,255,1)
    margin-bottom: 10px
        
.hero-cta-div
  width 100%
  display flex

.button-almost-clear
  color white
  border 1px solid white
  background: rgba(0,0,0,0.3)

.button-secondary
  background colorSecondary
  border-color colorSecondary
  color white

.hero-cta
  margin-right 10px
/*++++++++++++++++++++++++ BreadCrumb +++++++++++++++++++++++++++*/
.breadcrumb
  padding-right 10px

.breadcrumb-icon
  color colorSecondary
  font-style: normal
  padding-right 10px

.breadcrum-icon-inverted
  color colorPrimary

.breadcrumbs-container
  position absolute
  top 20px
  left 0
  color white
  //font-weight: bold
  font-size: 20px
  //text-shadow 1px 1px black
  a 
    color white

/*++++++++++++++++++++++++ PATH & COURSE +++++++++++++++++++++++++++*/
.grid-half
  width 50%
  flex 1 50%
  padding 10px
  margin-top 30px
  margin-bottom 50px
/*++++++++++++++++++++++++ PATHCATALOG +++++++++++++++++++++++++++*/
.col-quarter
  lost-column 1/3 3
  margin-bottom 20px

.path-list
  display: flex;
  flex-wrap: wrap;
  margin-top 25px

.path-topics__dropdown:before
  pointer-events:none
  content: "";
  position: absolute;
  right: 10px;
  top: 15px;
  width: 0; 
  height: 0; 
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid colorPrimary

.path-topics__dropdown:after
  pointer-events:none
  content: ""
  position: absolute
  right: 10px
  top: 12px
  width: 0
  height: 0
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid white

