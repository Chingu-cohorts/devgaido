/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Library */

.image-link-card__image
  background-size: cover
  height 200px
  border-radius: 6px 6px 0 0;
  opacity 0.85
  transition opacity 0.5s ease-out
  &:hover
    opacity 1

.image-link-card__loading-spinner
  height 200px
  border-radius: 6px 6px 0 0;
  width 100%

.topics-dropdown:before
  pointer-events:none
  content: "";
  position: absolute;
  right: 10px;
  top: 15px;
  width: 0; 
  height: 0; 
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid $accentColor

.topics-dropdown:after
  pointer-events:none
  content: ""
  position: absolute
  right: 10px
  top: 12px
  width: 0
  height: 0
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid white

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Auth0LockWidget */

.auth0-lock-header-logo
  width 100% !important

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* App.jsx page-transition */
.page-transition-enter
  transform: translateX(100%)

.page-transition-enter.page-transition-enter-active
  transform: translateX(0%)
  transition: transform 200ms

.page-transition-leave
  position absolute
  width 100%
  top 0
  transform: translateX(0)

.page-transition-leave.page-transition-leave-active
  transform: translateX(-100%)
  transition: transform 200ms
