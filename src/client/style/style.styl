/*--------------------------------------------------------------
# Navigation
--------------------------------------------------------------*/
a.link-active
  box-shadow 0px 1px colorSecondary

.button-login
  //background colorSecondary
  border-color colorPrimary
  color colorPrimary
  margin 0
  //font-weight: bold

.main-navigation
  margin-top 10px
  ul
    list-style: none
    margin 0
    padding 0
  li
    display: inline-block
    padding 0 1rem
    margin 0
    //font-weight bold
    text-transform: uppercase

.menu {
    // margin-right:1rem;
}
.menu a {
    float: right;
    line-height: 3.7rem;
    text-decoration: none;
    width: auto;
}

.menu a.menu-btn {
    border-radius: 1.5rem;
    height: 3rem;
    line-height: 3rem;
    padding-left: 3.5rem;
    padding-right: 1rem;
    
}

.menu a.login {
    background-color: colorSecondary;
    color: colorTextInverse;
}

.menu a.profile {
    background-color: colorPrimary;
    color: colorTextInverse;
}


.menu a.menu-btn:before {
    border-radius: 50%;
    color: colorTextInverse;
    font-family: 'FontAwesome'
    float: left;
    font-size: 1.3rem;
    font-weight: normal;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 24px;
    height: 3rem;
    line-height: 3rem;
    margin-left:-3.5rem;
    text-align: center;
    width: 3rem;
}

.menu a.menu-btn:before {
    background-color: colorPrimaryDark;
    content:"\f2c0"
}

.menu a.menu-btn-close:before {
    content:"\f00d"
}


.menu a.login:before {
    background-color: colorSecondaryDark;
    color: colorTextInverse;
    content:"\f090";
}

.search-header {
    float: left;
    padding: 0.3rem 2rem 0 2rem;
    width: 300px;
}
    

/*--------------------------------------------------------------
# Panels
--------------------------------------------------------------*/
 
.side-panel {
    background-color: colorTextInverse;
    //box-shadow: 5px 25px 20px rgba(30, 33, 94, 0.15);
    box-shadow: 2px 5px 10px rgba(30, 33, 94, 0.15);
    //height: 100vh;
    padding: 0;
    position: absolute;
    right: 0;
    top: 80px;
    transition: visibility 0s 0s;
    visibility: hidden;
    width: 300px;
    z-index: 100;
}

.side-panel.is-visible {
    visibility: visible;
    transition: visibility 0s 0s;
}

.search-container {
    float: left;
    padding: 2rem;
}
.side-panel h1,
.side-panel h2 {
    clear: both;
    padding-left: 2rem;
    text-transform: uppercase;
}

.side-panel h1 {
    margin-bottom: 2rem;
}

.side-panel ul {
    list-style-type: none;
    // margin-bottom: 4rem;
    padding: 0;
}

.side-panel ul li {
    border-bottom: 1px solid #f6f7fb;
    color: colorPrimaryDark;
    font-size: 0.8rem;
    line-height: 2rem;
    padding: 1rem 2rem;
}

.side-panel ul li.active {
    font-weight: 600;
}

.side-panel ul li i {
    background-color: colorPrimary;
