
@import './_variables'
@import './sutairu'
@import './modules'
@import './_functional'

// Needed to for Font Awesome
i::before
  font-family: 'FontAwesome'

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Sticky Footer & page content background color */

.App
  display flex
  min-height: 100vh;
  flex-direction: column;

.page-content
  background: #e7eaf6
  flex 1

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Header */

.logo
  background: url('/img/devGaidoLogo.svg')
  background-repeat: no-repeat
  width 146px
  height 28px

.logo--small
  width 112px
  height 22px

.avatar
  width 50px
  height 50px
  vertical-align: middle
  transition transform 0.3s
  &:hover
    transform scale(1.2)

.menu
  right 0
  top 77px
  z-index 999

  .card__header__text
    font-weight: normal

  .card
    position: relative
    &:before
      pointer-events:none
      content: "";
      position: absolute;
      right: 15px;
      top: 9px;
      width: 0; 
      height: 0; 
      border-left: 10px solid transparent
      border-right: 10px solid transparent
      border-bottom: 10px solid white

  .card__content
    padding 10px 25px 20px 25px
/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Home (Landing Page) */

.home-hero
  background-position-y: 50%
  height 600px
  background-attachment: fixed

.home-img__loading-spinner
  width 536px
  height 350px
  border-radius: 6px
  background: url('/img/spinner.gif')
  background-repeat: no-repeat
  background-position: 50% 50%

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
.grid-half
  width 50%
  flex 1 50%
  padding 10px
  margin-top 30px
  margin-bottom 50px

.col-quarter
  flex 0 0 96%
  margin-bottom 30px

@media (min-width: 700px)
  .col-quarter
    flex 0 0 48%

@media (min-width: 1100px)
  .col-quarter
    flex 0 0 32%
