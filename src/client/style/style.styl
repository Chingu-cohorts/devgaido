/*++++++++++++++++++++++++ PATH & COURSE +++++++++++++++++++++++++++*/

.page-hero
  background: url("http://lorempixel.com/1900/1200/technics/")
  background-size: cover
  position relative
  height 400px

.page-hero-color-overlay
  position absolute
  background alpha($color-primary, 0.75)
  top 0
  bottom 0
  left 0
  right 0

.page-hero-color-overlay-path
  background alpha(colorTertiary, 0.75)

.page-hero-color-overlay-course
  background alpha(colorPrimary, 0.75)

.page-hero-color-overlay-lesson
  background alpha(colorSecondary, 0.75)

.page-hero-container
  margin: 0 auto
  max-width: $widthMax
  position: relative
  width: 100%
  height 100%

.page-hero-name
  text-transform: uppercase
  font-weight: bold
  text-align: center
  vertical-align: middle
  color white
  position absolute
  top 50%
  left 50%
  transform: translate(-50%, -50%)

.completion-text-big
  margin 0
  position: absolute
  color white
  bottom 20px
  right 0
  font-weight: bold
.completion-text-big-left
  margin 0
  position: absolute
  color white
  bottom 20px
  left 0

.bookmark-button
  position: absolute    
  top 20px
  right 0
  border 2px solid white
  color white
  font-size 14px
  padding-bottom 37px

.grid-half
  width 50%
  flex 1 50%
  padding 10px

.card-big
  background white //colorPrimaryLight //$color-quaternary
  border-radius: 6px
  margin-bottom 20px

.connected
  position relative
  width 100%
  &:after
    content: "";
    position: absolute;
    display: block;
    bottom: -4px;
    left: "calc(%s / 4)" % $widthMax
    margin-left: -5px;
    width: 11px;
    height: 25px;
    background: alpha(colorTertiary, 0.5)
    border-radius: 2px;
  &:last-child:after
    height 0px

.connected-course:after
    background: alpha(colorPrimary, 0.5)

.card-big-header
  background: #007399
  display flex
  flex-direction: row
  border-radius: 6px 6px 0 0;
  padding 10px 15px

.card-big-header-path
  background colorTertiary//#007399

.card-big-header-course
  background colorPrimary

.card-big-header-lesson
  background colorSecondary

.card-big-header-text
  text-transform: uppercase
  //font-weight: bold
  color white
  margin 0
  flex 1

.card-big-header-text-extra
  color white
  padding 0 15px
  text-transform: uppercase
  font-weight: bold

.card-big-header-icon
  font-size: 2.2rem
  color white
  margin-top 3px
  margin-right 10px

.card-big-content
  padding 5px 15px

.completion-text
  margin 0
  text-align: right
  font-weight bold
  color #007399
