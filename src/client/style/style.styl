// You can easily overwrite the default variables like this:
$primaryColorLight = #e7eaf6
$primaryColor = #007399
$accentColor  = #DB684E

$fontFamily = 'Fira Sans', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
//$fontFamily = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
//$headingLetterSpacing = .305rem
$buttonFontWeight = 400
$headingFontWeight = 400
$fontWeight = 400
$fontSize = 1.8rem
$textColor = rgba(0,0,0, 0.77)
$lineHeight = 1.7
$linkLetterSpacing = 0.2rem
$containerGap = 20px
$containerWidth = "calc(1220px + %s * 2)" % ($containerGap)
// (Check /sutairu/base/_defaultVars.styl and /atomiku/_defaultVars for all default variables.)

$pageContentColor = #e5e5e5
$page-hero-height = 270px
$page-hero-height--full = 470px

@import './sutairu'
@import './atomiku'
@import './iconFont'
@import './modules'
@import './inlineAssets'

.bg-accent--dark
  background: darken($accentColor, 15)

.boxshadow-underline
  box-shadow 0px 1px $accentColor

// Compounds
.button--default
  @extend .border-pill
  @extend .bg-transparent
  @extend .border-text
  @extend .c-text
  @extend .c-hover-white
  @extend .bg-hover-primary
  @extend .border-hover-primary
  
.button--primary
  @extend .border-pill
  @extend .bg-primary
  @extend .border-primary
  @extend .bg-hover-accent
  @extend .border-hover-accent

.button--accent
  @extend .border-pill
  @extend .c-white
  @extend .border-accent
  @extend .bg-hover-primary
  @extend .border-hover-primary

.button--primary-clear
  @extend .border-pill
  @extend .c-primary
  @extend .border-primary
  @extend .bg-transparent
  @extend .bg-hover-accent
  @extend .c-hover-white
  @extend .border-hover-accent

.button--accent-clear
  @extend .border-pill
  @extend .c-accent
  @extend .border-accent
  @extend .bg-transparent
  @extend .bg-hover-black

.button--white-clear
  @extend .border-pill
  @extend .c-white
  @extend .border-white
  @extend .bg-transparent
  @extend .bg-hover-accent
  @extend .border-hover-accent

// Needed to for Icon Font
i::before
  font-family: 'icomoon'

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Sticky Footer & page content background color */

.App
  display flex
  min-height: 100vh;
  flex-direction: column;

.page-content
  background: $pageContentColor
  flex 1

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Header */

.logo--small
  width 112px
  height 22px

.avatar
  width 50px
  height 50px
  vertical-align: middle
  transition transform 0.3s
  &:hover
    transform scale(1.2)

.menu
  right $containerGap
  top 77px
  z-index 999

.menu-card
  position: relative
  &:before
    pointer-events:none
    content: "";
    position: absolute;
    right: 15px;
    top: 9px;
    width: 0; 
    height: 0; 
    border-left: 10px solid transparent
    border-right: 10px solid transparent
    border-bottom: 10px solid $accentColor
  box-shadow: 0px 0px 1px rgba(0,0,0,0.2)

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
/* Home (Landing Page) */

.home-hero
  background-position-y: 50%
  height 600px
  background-attachment: fixed

.home-img__loading-spinner
  width 536px
  height 350px
  border-radius: 6px
 

/*+++++++++++++++++++++++++++++++++++++++++++++++++++++++*/
.grid-half
  width 50%
  flex 1 50%
  padding 10px
  margin-top 30px
  margin-bottom 50px

.col-quarter
  flex 0 0 96%
  margin-bottom 30px

@media (min-width: 700px)
  .col-quarter
    flex 0 0 48%

