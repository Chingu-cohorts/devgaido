/*++++++++++++++++++++++++ PATH & COURSE +++++++++++++++++++++++++++*/

.page-hero
  background: url("http://lorempixel.com/1900/1200/technics/")
  background-size: cover
  position relative
  height 400px

.page-hero-compass
  background: url('/assets/img/hero.jpg')
  background-size: cover
  background-position-y: 50%
  height 270px

.page-hero-color-overlay
  position absolute
  background alpha($color-primary, 0.75)
  top 0
  bottom 0
  left 0
  right 0

.page-hero-color-overlay-path
  background alpha(colorPrimary, 0.75)

.page-hero-color-overlay-course
  background alpha(darken(colorSecondary,30%), 0.75)

.page-hero-color-overlay-lesson
  background alpha(colorPrimary, 0.75)

.page-hero-color-overlay-path-catalog
  background alpha(colorPrimary, 0.55)

.page-hero-container
  margin: 0 auto
  max-width: $widthMax
  position: relative
  width: 100%
  height 100%

.page-hero-name
  text-transform: uppercase
  font-weight: bold
  text-align: center
  vertical-align: middle
  color white
  position absolute
  top 50%
  left 50%
  transform: translate(-50%, -50%)

.completion-text-big
  margin 0
  position: absolute
  color white
  bottom 20px
  right 0
  //font-weight: bold
.completion-text-big-left
  margin 0
  position: absolute
  color white
  bottom 20px
  left 0

.bookmark-button
  position: absolute    
  top 20px
  right 0
  border 1px solid white
  color white
  font-size 14px
  padding-bottom 37px

.grid-half
  width 50%
  flex 1 50%
  padding 10px

.card-big
  background white
  border-radius: 6px
  margin-bottom 20px

// Needed because we wrap the cards in <Link> components which overwrites text with link colors
a
  .card-big
    color $color-text

.card-big-catalog
  margin 0
  height 100%
  display flex
  flex-direction: column

.connected
  position relative
  width 100%
  &:after
    content: "";
    position: absolute;
    display: block;
    bottom: -4px;
    left: "calc(%s / 4)" % $widthMax
    margin-left: -5px;
    width: 11px;
    height: 25px;
    background: alpha(colorPrimary, 0.5)
    border-radius: 2px;
  &:last-child:after
    height 0px

.connected-course:after
    background: alpha(colorSecondary, 0.5)

.card-big-header
  background: #007399
  display flex
  flex-direction: row
  border-radius: 6px 6px 0 0;
  padding 10px 15px

.card-big-header-path
  background colorPrimary//#007399

.card-big-header-course
  background colorSecondary

.card-big-header-lesson
  background colorPrimary

.card-big-header-text
  text-transform: uppercase
  //font-weight: bold
  color white
  margin 0
  flex 1

.card-big-header-text-extra
  color white
  padding 0 15px
  text-transform: uppercase
  font-weight: bold

.card-big-header-icon
  font-size: 2.2rem
  color white
  margin-top 3px
  margin-right 10px

.card-big-content
  padding 5px 15px
  display flex
  flex-direction: column
  justify-content: space-between
  flex 1

.completion-text
  margin 0
  text-align: right
  font-weight bold
  color #007399
/*++++++++++++++++++++++++ PATHCATALOG +++++++++++++++++++++++++++*/
.col-quarter
  lost-column 1/3 3
  margin-bottom 20px

.path-list
  display: flex;
  flex-wrap: wrap;
  margin-top 25px

.search-bar
  background: white

.search-bar-content
  display: flex
  align-items: center

.path-search-container
  flex:  1
  padding 10px 0
  display flex

.path-search-icon
  color colorPrimary
  padding-top 5px
  padding-right 10px
  font-size 1.6em

#path-search
  margin 0
  font-size 1.2em
  font-weight: 300
  border-color: colorPrimaryLight
  &:focus
    border-color: colorPrimary

#path-topics
  position: relative
  margin 0
  font-size 1.2em
  font-weight: 300
  border-color: colorPrimaryLight
  &:focus
    border-color: colorPrimary

.path-topics-dropdown
  position: relative

.path-topics-dropdown:before
  pointer-events:none
  content: "";
  position: absolute;
  right: 10px;
  top: 15px;
  width: 0; 
  height: 0; 
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid colorPrimary

.path-topics-dropdown:after
  pointer-events:none
  content: ""
  position: absolute
  right: 10px
  top: 12px
  width: 0
  height: 0
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid white

