createResponsiveText(bNames, bValues)
    for bName, i in bNames
      @media only screen and (min-width: bValues[i])
        .h0-{bNames[i]}
          font-size: "calc(%s * %s * %s * %s * %s * %s)" % ($fontSize $headingScale $headingScale $headingScale $headingScale $headingScale)
          line-height: 1.2
          letter-spacing: $headingLetterSpacing

        .h1-{bNames[i]}
          font-size: "calc(%s * %s * %s * %s * %s)" % ($fontSize $headingScale $headingScale $headingScale $headingScale)
          line-height: 1.2
          letter-spacing: $headingLetterSpacing

        .h2-{bNames[i]}
          font-size: "calc(%s * %s * %s * %s)" % ($fontSize $headingScale $headingScale $headingScale)
          line-height: 1.25
          letter-spacing: $headingLetterSpacing

        .h3-{bNames[i]}
          font-size: "calc(%s * %s * %s)" % ($fontSize $headingScale $headingScale)
          line-height: 1.3
          letter-spacing: $headingLetterSpacing

        .h4-{bNames[i]}
          font-size: "calc(%s * %s)" % ($fontSize $headingScale)
          letter-spacing: -.08rem
          line-height: 1.35
        
        .h5-{bNames[i]}
          font-size: "calc(%s)" % ($fontSize)
          letter-spacing: -.05rem
          line-height: 1.4

        .h6-{bNames[i]}
          font-size: "calc(%s / %s)" % ($fontSize $headingScale)
          letter-spacing: 0
          line-height: 1.45

createResponsiveText($breakpointNames, $breakpointValues)

.bold
  font-weight: 700

.medium
  font-weight: 500

.normal, .regular
  font-weight: 400

.light
  font-weight: 300

.thin
  font-weight: 100

.uppercase
  text-transform: uppercase

.lowercase
  text-transform: lowercase

.left
  text-align: left

.center
  text-align: center

.right
  text-align: right

.wide
  letter-spacing: .3rem

.wider
  letter-spacing: .5rem

.italic
  font-style: italic
