createMargins(strs, factors)
  for str, i in strs
    .margin-left{str}
      margin-left: factors[i] * $spaceSize !important
    .margin-right{str}
      margin-right: factors[i] * $spaceSize !important
    .margin-top{str}
      margin-top: factors[i] * $spaceSize !important
    .margin-bottom{str}
      margin-bottom: factors[i] * $spaceSize !important
    .margin{str}
      margin: factors[i] * $spaceSize !important
    .margin-vertical{str}
      margin-top: factors[i] * $spaceSize !important
      margin-bottom: factors[i] * $spaceSize !important
    .margin-horizontal{str}
      margin-left: factors[i] * $spaceSize !important
      margin-right: factors[i] * $spaceSize !important
      
createMargins($spaceSizeStrs, $spaceSizeFactors)

createResponsiveMargins(strs, factors, bNames, bValues)
