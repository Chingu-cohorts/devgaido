
// Button
// ––––––––––––––––––––––––––––––––––––––––––––––––––

.button,
button,
input[type='button'],
input[type='reset'],
input[type='submit']
	background-color: transparent
	border: .1rem solid $color-default
	border-radius: .4rem
	color: $color-text
	cursor: pointer
	display: inline-block
	font-size: 1.6rem
	font-weight: 300
	height: 3.8rem
	letter-spacing: .1rem
	line-height: 3.8rem
	padding: 0 3.0rem
	text-align: center
	text-decoration: none
	// text-transform: uppercase
	white-space: nowrap

	&:focus
		outline: none

	&:hover
		background-color: $color-secondary
		border-color: $color-secondary
		color: $color-initial
		outline: 0

	&[disabled]
		cursor: default
		opacity: .5

.button.button-primary
	background-color: $color-primary
	border-color: $color-primary
	color: $color-initial

	&:hover
		background-color: $color-secondary
		border-color: $color-secondary

.button-pill
	border-radius 999px
