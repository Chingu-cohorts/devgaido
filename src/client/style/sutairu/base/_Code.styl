code
  background: $codeBlockColor
  border-radius: $borderRadius
  font-size: 86%
  margin: 0 .2rem
  padding: .2rem .5rem
  white-space: nowrap

pre
  background: $codeBlockColor
  border-left: .3rem solid $codeBlockBorderColor
  overflow-y: hidden

  & > code
    border-radius: 0
    display: block
    padding: 1rem 1.5rem
    white-space: pre
